@model AlphaByteTechnologyExamCore.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">Employee details</div>
    <div class="card-body mb-2">
        <div class="row">
            <div class="col-md-4 mb-2">
                <div class="d-flex flex-row mb-1">
                    <div class="p-1"> @Html.DisplayNameFor(model => model.IdNumber):</div>
                    <div class="p-1">@Html.DisplayFor(model => model.IdNumber)</div>
                </div>
            </div>

            <div class="col-md-4 mb-2">
                <div class="d-flex flex-row mb-1">
                    <div class="p-1"> @Html.DisplayNameFor(model => model.Name):</div>
                    <div class="p-1">@Html.DisplayFor(model => model.Name)</div>
                </div>
            </div>

            <div class="col-md-4 mb-2">
                <div class="d-flex flex-row mb-1">
                    <div class="p-2"> @Html.DisplayNameFor(model => model.Dob):</div>
                    <div class="p-2">@Html.DisplayFor(model => model.Dob)</div>
                </div>
            </div>

            <div class="col-md-4 mb-2">
                <div class="d-flex flex-row mb-1">
                    <div class="p-2"> @Html.DisplayNameFor(model => model.Age):</div>
                    <div class="p-2">@Html.DisplayFor(model => model.Age)</div>
                </div>
            </div>

            <div class="col-md-4 mb-2">
                <div class="d-flex flex-row mb-1">
                    <div class="p-1"> @Html.DisplayNameFor(model => model.Department):</div>
                    <div class="p-1">@Html.DisplayFor(model => model.Department.Name)</div>
                </div>
            </div>

            <div class="col-md-4 mb-2">
                <div class="d-flex flex-row mb-1">
                    <div class="p-2"> @Html.DisplayNameFor(model => model.Division):</div>
                    <div class="p-2">@Html.DisplayFor(model => model.Division.Name)</div>
                </div>
            </div>

            <div class="col-md-4 mb-2">
                <div class="d-flex flex-row mb-1">
                    <div class="p-2"> @Html.DisplayNameFor(model => model.FileParh):</div>
                    <div class="p-2">
                        @if (string.IsNullOrEmpty(Model.FileParh))
                        {
                            <p>No resume added.</p>
                        }

                        @if (!string.IsNullOrEmpty(Model.FileParh))
                        {
                            <a href="@Model.FileParh" class="btn btn-dark" download="Resume.pdf">Resume</a>
                        }
                    </div>
                </div>
            </div>
        </div>



        <div class="btn-group" role="group" aria-label="Model btn group">
            <a class="btn btn-outline-primary" href="@Url.Action("Edit", "Employee", new { id = Model.Id })">Edit</a>
            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteComfirmationModal">
                Delete
            </button>

            <div class="modal fade" id="deleteComfirmationModal" tabindex="-1" aria-labelledby="deleteComfirmationModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteComfirmationModalLabel">@Model.Name delete confirmation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>
                                Are you sure you want to delete this record?
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal">No</button>

                            @using (Html.BeginForm("Delete", "Employee", new { id = Model.Id }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger">Yes</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="d-flex justify-content-center">
            <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Employee")">Go to Index</a>
        </div>
    </div>
</div>

